FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    location    "0/heater";
    object      cellToRegion;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 2;

boundaryField
{
    walls_heater
    {
        type            zeroGradient;
    }
    heater_to_fins
    {
        type            calculated;
        value           uniform 0;
    }
    procBoundary0to1
    {
        type            processor;
        value           uniform 2;
    }
}


